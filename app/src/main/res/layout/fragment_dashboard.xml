<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34.0dip"
        android:orientation="vertical"
        android:padding="@dimen/padding_16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.TextPink.Large.RobotoBold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_hi" />

            <TextView
                android:id="@+id/tv_home_name"
                style="@style/TextView.TextBlack.Large.RobotoBold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_name" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_12dp">

            <ImageView
                android:layout_width="150.0dip"
                android:layout_height="75.0dip"
                android:padding="8.0dip"
                android:src="@drawable/logo_new" />

            <TextView
                style="@style/TextView.TextBlack.XSmall.RobotoBold"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_height="wrap_content"
                android:text="@string/app_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_new_registration"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/home_add" />

                        <TextView
                            style="@style/TextView.TextBlack.XSmall.RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/new_registration" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_renewal"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/home_renew" />

                        <TextView
                            style="@style/TextView.TextBlack.XSmall.RobotoBold"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/certificate_renewal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_registration_status"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/home_status" />

                        <TextView
                            style="@style/TextView.TextBlack.XSmall.RobotoBold"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status_of_registration" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_registered_dogs"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="15.0dip"
                            android:src="@drawable/home_dog" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView.TextBlack.XSmall.RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8.0dip"
                                android:gravity="left"
                                android:text="@string/registered_dogs" />

                            <TextView
                                android:id="@+id/tv_register_count"
                                style="@style/TextView.TextWhite.ExtraLarge.RobotoBold"
                                android:layout_width="42.0dip"
                                android:layout_height="42.0dip"
                                android:layout_marginLeft="@dimen/margin_16dp"
                                android:background="@drawable/rect_orange_circular_corner"
                                android:gravity="center"
                                android:padding="@dimen/margin_4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_complain_history"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/ic_baseline_history_24"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView.TextBlack.XSmall.RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8.0dip"
                                android:gravity="left"
                                android:text="Complaint History" />

                            <TextView
                                android:id="@+id/tv_history_count"
                                style="@style/TextView.TextWhite.ExtraLarge.RobotoBold"
                                android:layout_width="42.0dip"
                                android:layout_height="42.0dip"
                                android:layout_marginLeft="@dimen/margin_16dp"
                                android:background="@drawable/rect_orange_circular_corner"
                                android:gravity="center"
                                android:padding="@dimen/margin_4dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/raise_complaint"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/ic_verify_certificate" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView.TextBlack.XSmall.RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8.0dip"
                                android:gravity="left"
                                android:text="Raise Complaint" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/home_status"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView.TextBlack.XSmall.RobotoBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8.0dip"
                                android:gravity="center"
                                android:text="Settings" />

                            <TextView
                                style="@style/TextView.TextWhite.ExtraLarge.RobotoBold"
                                android:layout_width="42.0dip"
                                android:layout_height="42.0dip"
                                android:layout_marginLeft="@dimen/margin_16dp"
                                android:background="@drawable/rect_orange_circular_corner"
                                android:gravity="center"
                                android:padding="@dimen/margin_4dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_weight="1.0"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:visibility="invisible"
                    android:elevation="@dimen/margin_4dp"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="@dimen/margin_4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_12dp">

                        <ImageView
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:padding="12.0dip"
                            android:src="@drawable/ic_verify_certificate" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView.TextBlack.XSmall.RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8.0dip"
                                android:gravity="left"
                                android:text="Raise Complaint" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</ScrollView>