<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alpha="100.0"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/buddha_image"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/lord_buddha" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.7"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/noida_logo"
        android:layout_width="150.0dip"
        android:layout_height="150.0dip"
        android:layout_centerInParent="true"
        tools:src="@drawable/noida_logo" />

    <TextView
        android:id="@+id/pet_reg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noida_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/pet_reg"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pet_reg_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5.0dip"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/mob_app"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold" />
</RelativeLayout>